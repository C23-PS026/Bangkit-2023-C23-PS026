<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.LandingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/welcoming_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="TODO"
            android:src="@drawable/welcoming_image_meatfyi"
            app:layout_constraintBottom_toTopOf="@+id/welcome_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/welcoming_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            app:layout_constraintHorizontal_bias="0.0"
            android:letterSpacing="0.05"
            android:text="Welcome Meat Lovers!"/>

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/welcome_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_3"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintHorizontal_bias="0.0"
            android:letterSpacing="0.05"
            android:textAlignment="inherit"
            android:text="@string/desc_welcomeing"/>

        <TextView
            android:id="@+id/text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cont_button"
            android:textSize="12sp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.05"
            android:textAlignment="center"
            android:text="Click the button below to continue "/>

        <Button
            android:id="@+id/cont_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_3"
            android:textAllCaps="false"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#FF8300"
            tools:ignore="MissingConstraints">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>